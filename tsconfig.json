{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
